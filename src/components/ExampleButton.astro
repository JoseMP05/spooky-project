---
const {class: className, src, name} = Astro.props
---

<button class={className} data-topic={name}>
  <div>
    <img src={src} alt="" />
  </div>
  <span>{name}</span>
</button>

<style>
  button {
    width: 100%;
    text-align: start;
  }

  button div {
    background-color: var(--neutral-medium);
    height: auto;
    aspect-ratio: 3/4;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 8px;
  }

  img{
    width: 100%;
    height: 100%;
  }
</style>